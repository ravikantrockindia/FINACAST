<aura:component controller="Finacast_ScenarioParentApex" 
                implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction,lightning:isUrlAddressable" 
                access="global">
    
    <aura:attribute name="namespace" type="string"/>
    <!-- attribute list -->
    <aura:attribute name="data1" type="Object"/>
    <aura:attribute name="data2" type="Object"/>
    <aura:attribute name = "cid" type = "String" default="0014600001eRaJoAAK"/>
    <aura:attribute name="Spinner" type="boolean" default="false"/>
    
    <!--handlers-->
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    <!--aura:handler event="aura:waiting" action="{!c.showSpinner}"/-->
    <!--aura:handler event="aura:doneWaiting" action="{!c.hideSpinner}"/-->
    
    <!--loading spinner start... style=Brand Medium (blue dots)-->
    <aura:if isTrue="{!v.Spinner}">
        <div aura:id="spinnerId" class="slds-spinner_container">
            <div class="slds-spinner--brand  slds-spinner slds-spinner--large slds-is-relative" role="alert">
                <span class="slds-assistive-text">Loading</span>
                <div class="slds-spinner__dot-a"></div>
                <div class="slds-spinner__dot-b"></div>
            </div>
        </div>
    </aura:if>
    <!-- Loading spinner end-->
    
    <!--Tabs set here-->
    <lightning:tabset>
        
        <lightning:tab label="Scenario" title="Scenario">
            <div class="slds-grid slds-gutters">
                <div class="slds-col  slds-size_6-of-12">
                    <c:Finacast_ScenarioComponent data2="{! v.data2}"
                                                  cid="{! v.cid}"
                                                  namespace="{! v.namespace}"/>
                </div>
                <div class="slds-col  slds-size_5-of-12">
                    <lightning:card  title="Financial Health"> <c:Finacast_FS_FinancialHealthComponent data="{! v.data2}" namespace="{! v.namespace}"/></lightning:card>
                    <lightning:card  title="Financial Debt Forecast"><c:Finacast_FS_FinancialDebtForecastComponent data="{! v.data2}" namespace="{! v.namespace}"/></lightning:card>
                    <lightning:card  title="Financial Networth Forecast"><c:Finacast_FS_FinancialNetworthForecastComponent data="{! v.data2}" namespace="{! v.namespace}"/></lightning:card>
                    <lightning:card  title="Financial Goal Forecast"><c:Finacast_FS_FinancialGoalForecastComponent data="{! v.data2}" namespace="{! v.namespace}"/></lightning:card> 
                </div>
            </div>
        </lightning:tab>
        
        <lightning:tab onactive="{! c.handleActive }" label="Compare" title="Compare to current state">
            Compare to Current State
            
            <div class="slds-grid slds-gutters">
                
                <!-- 1. Current State -->
                <div class="slds-col  slds-size_6-of-12">
                     <lightning:card  title="Financial Health"> <c:Finacast_FS_FinancialHealthComponent data="{! v.data1}" namespace="{! v.namespace}"/></lightning:card>
                    <lightning:card  title="Financial Debt Forecast"><c:Finacast_FS_FinancialDebtForecastComponent data="{! v.data1}" namespace="{! v.namespace}"/></lightning:card>
                    <lightning:card  title="Financial Networth Forecast"><c:Finacast_FS_FinancialNetworthForecastComponent data="{! v.data1}" namespace="{! v.namespace}"/></lightning:card>
                    <lightning:card  title="Financial Goal Forecast"><c:Finacast_FS_FinancialGoalForecastComponent data="{! v.data1}" namespace="{! v.namespace}"/></lightning:card>
                </div>
                
                <!-- Scenario State -->
                <div class="slds-col  slds-size_6-of-12">
                    <lightning:card  title="Financial Health"> <c:Finacast_FS_FinancialHealthComponent data="{! v.data2}" namespace="{! v.namespace}"/></lightning:card>
                    <lightning:card  title="Financial Debt Forecast"><c:Finacast_FS_FinancialDebtForecastComponent data="{! v.data2}" namespace="{! v.namespace}"/></lightning:card>
                    <lightning:card  title="Financial Networth Forecast"><c:Finacast_FS_FinancialNetworthForecastComponent data="{! v.data2}" namespace="{! v.namespace}"/></lightning:card>
                    <lightning:card  title="Financial Goal Forecast"><c:Finacast_FS_FinancialGoalForecastComponent data="{! v.data2}" namespace="{! v.namespace}"/></lightning:card> 
                </div>
                
            </div>
        </lightning:tab>
        
    </lightning:tabset>
    
</aura:component>