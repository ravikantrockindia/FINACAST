<aura:component implements="force:appHostable,flexipage:availableForAllPageTypes" access="global">
    <aura:attribute name="accountRecordId" type="String" default=""/>
    <aura:attribute name="selectedAccountType" type="String" default=""/>
    <aura:attribute name="title" type="String" default="Bank Account"/>
    <aura:attribute name="financialAccount" type="FinServ__FinancialAccount__c" default=""/>
    <aura:attribute name="showInModal" type="boolean" default="false"/>
    <aura:attribute name="namespace" type="String" default=""/>
    <aura:attribute name="recordTypeIds" type="List[]"/>
    <aura:attribute name="editRecordCash" type="boolean"/>
    <aura:attribute name="editRecInves" type="boolean"/>
    
    <div style="height:640px">
        <section role="dialog" tabindex="-1" aria-labelledby="modal-heading-01" aria-modal="true" aria-describedby="modal-content-id-1" class="slds-modal slds-fade-in-open slds-modal_large">
            <div class="slds-modal__container res_ba-modal">
                <header class="slds-modal__header">
                    <div class="slds-grid slds-gutters slds-p-left_xx-large">
                        <div class="slds-col slds-size_1-of-12 ">
                            <img src="{!$Resource.dollar}" />
                        </div>
                        <div class="slds-col slds-size_11-of-12 slds-text-align--left slds-p-top_medium">
                        	<h2 id="modal-heading-01" class="slds-text-heading_medium slds-hyphenate">{!v.title}</h2>
                        </div>
                    </div>
                </header>
                <div class="slds-modal__content slds-p-around_medium" id="modal-content-id-1">
                    <c:BankAccountForm accountRecordId="{#v.accountRecordId}" recordTypeIds="{!v.recordTypeIds}" financialAccount="{!v.financialAccount}" showInModal="{!v.showInModal}" namespace="{!v.namespace}" selectedAccountType="{!v.selectedAccountType}" editRecordCash="{!v.editRecordCash}" editRecInves="{!v.editRecInves}"></c:BankAccountForm>
                </div>
            </div>
        </section>
        <div class="slds-backdrop slds-backdrop_open"></div>
    </div>
</aura:component>