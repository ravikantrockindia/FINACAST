<aura:component implements="force:appHostable,flexipage:availableForAllPageTypes" access="global">
    <aura:attribute name="accountRecordId" type="String"/>
    <aura:attribute name="financialAccount" type="FinServ__FinancialAccount__c" default=""/>
    <aura:attribute name="showInModal" type="boolean"/>
    <aura:attribute name="showInModal1" type="boolean"/>
    
    <aura:attribute name="clientid" type="boolean"/>
    <aura:attribute name="namespace" type="String" default=""/>
    <aura:attribute name="recordTypeIds" type="List[]"/>
    <aura:attribute name="options" type="List" default="[
                                                        {'label': 'Cash', 'value': 'Cash'},
                                                        {'label': 'Credit', 'value': 'Credit'},
                                                        {'label': 'Investment', 'value': 'Investment'},
                                                        {'label': 'Loan', 'value': 'Loan'}
                                                        ]"/>
    <aura:attribute name="value" type="String" default="Cash"/>
    
    <!-- <lightning:recordEditForm
                              aura:id="form"
                             recordId="{!v.financialAccount.Id}"
                              recordTypeId="{!v.recordTypeId}"
                              onerror="{!c.handleError}"
                              onsuccess="{!c.handleSuccess}"
                              objectApiName="FinServ__FinancialAccount__c">-->
    <div style="height:640px">
        <section role="dialog" tabindex="-1" aria-labelledby="modal-heading-01" aria-modal="true" aria-describedby="modal-content-id-1" class="slds-modal slds-fade-in-open">
            
            <div class="slds-modal__container" >
                
                <header class="slds-modal__header">
                    <h2 id="modal-heading-01" class="slds-text-heading_medium slds-hyphenate">Add Account</h2>
                </header>
                <div class="slds-modal__content slds-p-around_medium">
                    <h3> Select the Account Type</h3>
                    <lightning:radioGroup name="radioGroup"
                                          options="{! v.options }"
                                          value="{! v.value }"
                                          type="radio"
                                          onchange="{!c.changeOption}"/>
                </div>
                <footer class="slds-modal__footer">
                    
                    <div class="slds-clearfix custom_width">
                        <div class="slds-float_right">
                            <aura:if isTrue="{!v.showInModal}">
                                <lightning:button label="{!$Label.c.Cancel}" onclick="{!c.onClickCancel}" class="mlr"/>
                            </aura:if>
                        </div>                    
                    </div>
                </footer>
            </div>
        </section>
        <div class="slds-backdrop slds-backdrop_open"></div>
    </div>
    <aura:if isTrue="{!v.showInModal1}">
        
        <aura:if isTrue="{!v.value=='Cash'}">
            <c:BankAccountModal accountRecordId="{!v.accountRecordId}" financialAccount="{!v.financialAccount}" recordTypeIds="{!v.recordTypeIds}" showInModal="{!v.showInModal1}" namespace="{!v.namespace}"/>
        </aura:if>  </aura:if>     
    <!-- </lightning:recordEditForm>-->
</aura:component>